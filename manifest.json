{
  "manifest_version": 2,
  "name": "Calendar Auto Categories",
  "description": "Automatically assigns categories to calendar events based on keywords in the title. Supports custom colors and configurable time ranges.",
  "version": "1.4.1",
  "author": "C|E|S Catering & Event Services",
  "homepage_url": "https://github.com/akirschten/calendar-auto-categories",
  "browser_specific_settings": {
    "gecko": {
      "id": "calendar-auto-categories@ces-catering.ch",
      "strict_min_version": "115.0"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage"],
  "experiment_apis": {
    "calendarCategories": {
      "schema": "api/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["calendarCategories"]],
        "script": "api/implementation.js",
        "events": ["startup"]
      }
    }
  }
}
